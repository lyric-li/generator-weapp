/* pages/splash/index.wxss */

.splash-logo {
  width: 750rpx;
  margin: 0 auto;
}

.splash-name {
  margin: 48rpx 0 20rpx;
  font-size: 56rpx;
  font-weight: 600;
  color: var(--font-primary-color);
  text-align: center;
}

.splash-slogan {
  width: 498rpx;
  margin: 20rpx auto 40rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: var(--font-info-color);
  text-align: center;
}

.splash-action {
  text-align: center;
}

.van-button--primary {
  width: 240rpx !important;
  height: 80rpx !important;
  font-size: 30rpx !important;
  line-height: 80rpx !important;
  background: linear-gradient(90deg, #0dd, #00c5cd) !important;
  border: none !important;
  border-radius: 40rpx !important;
}
